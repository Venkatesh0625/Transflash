<h1 style="padding-bottom: 20px;">Bring a Thing</h1>
<form class="form-horizontal" id='booking-form' action='/booking' onsubmit="return validateBooking();" method='post'>
    <div class="row">        
        <label class="control-label col-lg-4"><h4>Start Location</h4></label>
        <div class="col-lg-8">
            <input type="text" id="start-location" name="startLocation" placeholder="" class="input-xlarge form-control" required>
        </div>
    </div>

    <div class="row" style="padding: 45px 0px 10px 0px">        
        <label class="control-label col-lg-4"><h4>End Location</h4></label>
        <div class="col-lg-8">
            <input type="text" id="end-location" name="endLocation" placeholder="" class="input-xlarge form-control" required>
        </div>
    </div>
    <div class="form-group row" style="padding: 45px 0px 10px 0px">
        <label for="start_date" class="control-label col-lg-4"><h4>Start Date</h4></label>
        <div class="col-lg-8">
            <input class="form-control" type="date" id="start_date" name="startDate" required>
        </div>
    </div>

    <div class="form-group row" style="padding: 30px 0px 10px 0px">
        <label for="end_date" class="control-label col-lg-4"><h4>End Date</h4></label>
        <div class="col-lg-8">
            <input class="form-control" type="date" id="end_date" name="endDate" required>
        </div>
    </div>
    <div class="container" style="padding: 20px 0px">
        <input type="submit" name="submit" class="btn btn-success btn-lg">
    </div>
</form>